<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6EB"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="139dp"
        android:layout_height="68dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="128dp"
        android:text="Sur"
        android:textColor="#FF5D6E"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-10dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:srcCompat="@drawable/logoleaf" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@drawable/bag" />

    <ImageView
        android:id="@+id/SigninBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:contentDescription="Sign in button here"
        android:onClick="onClickSignIn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/signin" />

    <ImageView
        android:id="@+id/ConsumerSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="onClickRegisterConsumer"
        app:layout_constraintStart_toStartOf="@+id/SigninBtn"
        app:layout_constraintTop_toBottomOf="@+id/SigninBtn"
        app:srcCompat="@drawable/consumer_signup" />

    <ImageView
        android:id="@+id/SupplierSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        app:layout_constraintStart_toStartOf="@+id/ConsumerSignUp"
        app:layout_constraintTop_toBottomOf="@+id/ConsumerSignUp"
        app:srcCompat="@drawable/supplier_signup" />

</androidx.constraintlayout.widget.ConstraintLayout>