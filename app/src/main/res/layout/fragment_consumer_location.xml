<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    tools:context=".ConsumerLocationFragment">


    <FrameLayout
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ConsumerLocationFragment">

        <EditText
            android:id="@+id/search_box"
            android:elevation="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawableLeft="@drawable/baseline_search_24"
            android:padding="10dp"
            android:hint="Search your Item here..."
            android:drawablePadding="5dp"
            android:background="@color/evergreen"
            android:textColor="@color/white"
            android:textColorHint="@color/white"/>

        <Button
            android:id="@+id/currentlocbtn"
            android:background="@drawable/btn_bg_design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="170px"
            android:drawableLeft="@drawable/baseline_my_location_24"
            android:text="Use my Current Location"
            android:onClick="showCurrentLocation"/>


    </FrameLayout>

</FrameLayout>