<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    tools:context=".ConsumerLocationFragment">


    <FrameLayout
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ConsumerLocationFragment">

        <SearchView
            android:id="@+id/searchloc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:queryHint="Choose a Location"
            android:background="@color/evergreen"
            android:searchIcon="@drawable/baseline_search_24"
            android:closeIcon="@drawable/baseline_close_24"
            android:iconifiedByDefault="false"
            android:focusable="false"
            />

        <Button
            android:id="@+id/currentlocbtn"
            android:background="@drawable/btn_bg_design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150px"
            android:drawableLeft="@drawable/baseline_my_location_24"
            android:text="Use my Current Location"
            android:onClick="showCurrentLocation"/>


    </FrameLayout>

</FrameLayout>